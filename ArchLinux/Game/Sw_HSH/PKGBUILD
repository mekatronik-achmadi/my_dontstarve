pkgname=dont-starve-sw-shs
pkgver=2.4.6.9
pkgrel=1
pkgdesc="New Shipwrecked DLC for Don't Starve"
url="https://www.kleientertainment.com/games/dont-starve"
license=('custom')
arch=('any')
depends=('gog-dont-starve')
conflicts=('gog-dont-starve-sw')
source=('DLC0002.zip' 'flooding.patch')
md5sums=('SKIP' 'SKIP')

# Prevent compressing final package
PKGEXT='.pkg.tar'

prepare(){
	cd "$srcdir/DLC0002/scripts/components/"
    	patch < ../../../flooding.patch
}

package(){
	cd "$srcdir"
	
	if [ -d "/opt/gog-dont-starve/game/dontstarve64/data/" ]; then
		install -d "${pkgdir}/opt/gog-dont-starve/game/dontstarve64/data/"
		cp -r "DLC0002/" "${pkgdir}/opt/gog-dont-starve/game/dontstarve64/data/"
	elif [ -d "/opt/gog-dont-starve/game/dontstarve64/data/" ]; then
		install -d "${pkgdir}/opt/gog-dont-starve/game/dontstarve32/data/"
		cp -r "DLC0002/" "${pkgdir}/opt/gog-dont-starve/game/dontstarve32/data/"
	fi
}
